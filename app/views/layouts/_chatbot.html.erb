<% if @chats.nil? %>
  <div class="card chat-card">
    <div class="card-body msg_card_body">
      <div class="msg_container">
      	<%= @chat&.response %> <span class="msg_time"></span>
      </div>
    </div>
  </div>
<% else %>
	<% @chats.each do |chat| %>
		<div class="card chat-card">
      <div class="card-body msg_card_body">
        <div class="msg_container_send">
        	<%= chat&.message %>
        	<span class="msg_time_send"><%= chat.created_at %></span>
        </div>
      </div>
    </div>
  	<div class="card chat-card">
      <div class="card-body msg_card_body">
        <div class="msg_container">
          <%= chat&.response %>
          <span class="msg_time"><%= chat.updated_at %></span>
        </div>
      </div>
    </div>
	<% end %>
<% end %>
