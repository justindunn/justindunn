<div class="card mb-5">
  <div class="card-body msg_card_body">
    <%= form_for(@chat, remote: true) do |f| %>

      <div class='form-outline row'>
        <div class='col-11'>
          <%= f.text_area :message, autofocus: true, class: 'form-control msg_container_send', placeholder: 'talk here...' %>
          <span class="msg_time_send"></span>
        </div>
        <div class='col-1'>
          <%= f.submit "send", id: 'submit', class: 'btn btn-light h-100 w-100 btn-rounded' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
